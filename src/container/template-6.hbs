<header class='header'>
    <div>
        {{> logo}}
    </div>

    <nav class='header_nav'>
        <div class="header_nav_right">
            {{> nav list=header}}
        </div>
    </nav>
</header>  

<main class="main">
    {{#with info}}
        <div class="info">
            <h1 class="info_title">{{title}}</h1>
            <p class="info_description">{{description}}</p>
        </div>
    {{/with}}
    {{#with form}}
        <form class="form">
            <h2 class="form_title">{{title}}</h2>

            <div class="form_input_list">
                {{#each inputs}}
                    <input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}" 
                        id="form-input-{{id}}">
                {{/each}}
            </div>

            <div class="form_checkbox">
                <input type="checkbox" name="{{checkbox.name}}">
                <label>{{checkbox.label}}</label>
            </div>

            <button type="submit" class="form_button">{{button}}</button>
            <p class="form_info">{{info}}</p>
        </form>
    {{/with}}
</main>

{{#with updates}}
    <div class="updates">
        <h4 class="updates_title">{{title}}</h4>
        {{#each list}}
            <div class="updates_list">
                <strong class="updates_nick">{{nickname}}</strong>
                <p class="updates_description">{{description}}</p>
            </div>
        {{/each}}
        <a href="{{show_all.url}}" class="updates_link">{{show_all.text}}</a>
    </div>
{{/with}}

{{#with expirience}}
    <div class="expirience">
        <h3 class="expirience_title">{{title}}</h3>
                <span class="badge2">{{badge}}</span>
            <div class="expirience_list">
                {{#each list}}
                    <div>
                        <strong class="expirience_name">{{name}}</strong>
                        <p class="expirience_details">{{details}}</p>
                    </div>
                {{/each}}
            </div>
    </div>
{{/with}}

<footer class="footer">
    <div>
        {{> logo}}
        <span class="footer_copyright">Copyright 2023-2024</span>
    </div>

    {{#each footer}}
        <div>
            <span class="footer_title">{{title}}</span>
            {{> nav list=links isVertical=true}}
        </div>
    {{/each}}
</footer>
